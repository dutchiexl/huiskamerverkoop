{% extends 'base.html.twig' %}

{% block body %}
    <h1>VisitingDay</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visitingDay.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{% if visitingDay.day %}{{ visitingDay.day|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('visitingday_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('visitingday_edit', { 'id': visitingDay.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
